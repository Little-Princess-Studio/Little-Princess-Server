<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>
  
  <PropertyGroup Condition=" '$(ServerSide)'==true ">
    <DefineConstants>$(DefineConstants);SERVER_SIDE</DefineConstants>
  </PropertyGroup>
  
  <PropertyGroup Condition=" '$(ClientSide)'==true ">
    <DefineConstants>$(DefineConstants);CLIENT_SIDE</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.19.1" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Include="NLog" Version="5.0.0-preview.3" />
  </ItemGroup>

</Project>
