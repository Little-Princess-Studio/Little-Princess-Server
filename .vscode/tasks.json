{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "kill_process",
                "build_lps"
            ]
        },
        {
            "label": "kill_process",
            "linux": {
                "command": "cd scripts && ./force_stop_server.sh",
            },
            "osx": {
                "command": "cd scripts && ./force_stop_server.sh",
            },
            "windows": {
                "command": "echo pass",
            },
            "type": "shell",
            "presentation": {
                "reveal": "silent",
                "panel": "new"
              }
            },
        {
            "label": "build_lps",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/LPS.Server.Demo/LPS.Server.Demo.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/LPS.Server/LPS.Server.Demo.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/LPS.Server.Demo/LPS.Server.Demo.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}